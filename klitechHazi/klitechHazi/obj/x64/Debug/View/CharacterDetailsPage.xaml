<Page x:Class="klitechHazi.View.CharacterDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#F0F0F0">
        <!-- Karakter részletek megjelenítése -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Név:" FontWeight="Bold" Foreground="#008000"/>
                    <TextBlock x:ConnectionId='2' x:Name="nameLabel" Text="{Binding Name}" FontSize="20" Margin="0,0,0,10" Foreground="#008000"/>

                    <TextBlock Text="Kultúra:" FontWeight="Bold" Foreground="#008000"/>
                    <TextBlock x:ConnectionId='3' x:Name="cultureLabel" Text="{Binding Culture}" Margin="0,0,0,10" Foreground="#008000"/>

                    <TextBlock Text="Született:" FontWeight="Bold" Foreground="#008000"/>
                    <TextBlock x:ConnectionId='4' x:Name="bornLabel" Text="{Binding Born}" Margin="0,0,0,10" Foreground="#008000"/>

                    <TextBlock Text="Meghalt:" FontWeight="Bold" Foreground="#008000"/>
                    <TextBlock x:ConnectionId='5' x:Name="diedLabel" Text="{Binding Died}" Margin="0,0,0,10" Foreground="#008000"/>

                    <TextBlock Text="Címek:" FontWeight="Bold" Foreground="#008000"/>
                    <ListBox x:ConnectionId='6' x:Name="titlesListBox" Margin="0,0,0,10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Margin="0,0,0,5" Foreground="#008000"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Text="Aliasok:" FontWeight="Bold" Foreground="#008000"/>
                    <ListBox x:ConnectionId='7' x:Name="aliasesListBox" Margin="0,0,0,10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Margin="0,0,0,5" Foreground="#008000"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Text="Apja:" FontWeight="Bold" Foreground="#008000"/>
                    <TextBlock x:ConnectionId='8' x:Name="fatherLabel" Text="{Binding Father}" Margin="0,0,0,10" Foreground="#008000"/>

                    <TextBlock Text="Anyja:" FontWeight="Bold" Foreground="#008000"/>
                    <TextBlock x:ConnectionId='9' x:Name="motherLabel" Text="{Binding Mother}" Margin="0,0,0,10" Foreground="#008000"/>

                    <TextBlock Text="Házastársa:" FontWeight="Bold" Foreground="#008000"/>
                    <TextBlock x:ConnectionId='10' x:Name="spouseLabel" Text="{Binding Spouse}" Margin="0,0,0,10" Foreground="#008000"/>

                    <TextBlock Text="Hűbérúri kötelezettségek:" FontWeight="Bold" Foreground="#008000"/>
                    <ListBox x:ConnectionId='11' x:Name="allegiancesListBox" Margin="0,0,0,10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Margin="0,0,0,5" Foreground="#008000"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Text="Könyvek:" FontWeight="Bold" Foreground="#008000"/>
                    <ListBox x:ConnectionId='12' x:Name="booksListBox" Margin="0,0,0,10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Margin="0,0,0,5" Foreground="#008000"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Text="POV könyvek:" FontWeight="Bold" Foreground="#008000"/>
                    <ListBox x:ConnectionId='13' x:Name="povBooksListBox" Margin="0,0,0,10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Margin="0,0,0,5" Foreground="#008000"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Text="TV sorozatok:" FontWeight="Bold" Foreground="#008000"/>
                    <ListBox x:ConnectionId='14' x:Name="tvSeriesListBox" Margin="0,0,0,10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Margin="0,0,0,5" Foreground="#008000"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Text="Eljátszotta:" FontWeight="Bold" Foreground="#008000"/>
                    <ListBox x:ConnectionId='15' x:Name="playedByListBox" Margin="0,0,0,10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Margin="0,0,0,5" Foreground="#008000"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button x:ConnectionId='16' Content="Vissza"                          HorizontalAlignment="Left" Margin="0,20,0,0" Background="#0078D7" Foreground="#008000"/>
                </StackPanel>

                <StackPanel Grid.Column="1">

                </StackPanel>

                <StackPanel Grid.Column="2">

                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>

